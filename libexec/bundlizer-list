#!/bin/sh

set -e

# Define constants

    readonly BUNDLES=$(cd $(dirname $0)/.. && pwd)$PREFIX/bundles


# Display installed bundler apps

    list() {
      echo "Bundler apps installed by the Bundlizer:"
      for app in `ls $BUNDLES`; do
        echo " * $app"
        echo "     apps: `ls $BUNDLES/$app/bin | tr '\012' ',' | sed 's/,$//g'`"
      done
    }


list $@

exit 0
